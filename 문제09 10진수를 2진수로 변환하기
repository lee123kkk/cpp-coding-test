/*
10진수 decimal을 입력받아 2진수로 변환해서 문자열 형태로 반환하는 solution()함수를 구현하세요.
*/

#include <stack>
#include <string>
using namespace std;

string solution(int decimal) {
   //❶입력 값이  0인 경우 바로 처리
    if (decimal == 0) return "0"; 

    stack<int> stack;
    while (decimal > 0) {
        //❷ 2로 나눈 나머지를 스택에 삽입
        stack.push(decimal % 2);  
        decimal /= 2;
    }

    string binary = "";
    while (!stack.empty()) {
       //❸ 스택에서 차례대로 top()에 해당되는 값을 binary에 추가
        binary += to_string(stack.top());  
        stack.pop();
    }
    return binary;
}
